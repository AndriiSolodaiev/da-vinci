            <stop offset="1" stop-opacity="0"/>
          </linearGradient>
        </defs>
      </svg>
    .vacancies-img 
      img(src="./assets/images/vacancies.png", alt="fog").soldiers
      
    .vacancies-content.container
      h1.section-title.vacancies-title Вакансії
      p.vacancies-descr 1-й  Окремий шутрмовий полк 
        span потребує фахівців різних напрямків, 
        | знайди свій.
  section.vacancies-cards.container 
    .section-top-decor
    ul.vacancies-list 
      li.vacancies-card 
        .text-frame--border
          .text-frame
            p.vacancies-card__number 01
            .vacancies-card__text-wrap
              .vacancies-card__text 
                h3 Водій мінометного взводу
                button(type="button" data-specialty__btn data-specialty-id="1").vacancies-card__descr.link--hover  
                  span.link-face.link-face--front Опис ваканції
                  span.link-face.link-face--back Опис ваканції
              button.general-btn(type="button" data-call-us-btn data-specialty-id="1") 
                span Долучитися

      li.vacancies-card 
        .text-frame--border
          .text-frame
            p.vacancies-card__number 02
            .vacancies-card__text-wrap
              .vacancies-card__text 
                h3 Діловод служби логістики
                button(type="button" data-specialty__btn data-specialty-id="2").vacancies-card__descr.link--hover  
                  span.link-face.link-face--front Опис ваканції
                  span.link-face.link-face--back Опис ваканції
              button.general-btn(type="button" data-call-us-btn data-specialty-id="2") 
                span Долучитися

      li.vacancies-card 
        .text-frame--border
          .text-frame
            p.vacancies-card__number 03
            .vacancies-card__text-wrap
              .vacancies-card__text 
                h3 Діловод групи персоналу штабу
                button(type="button" data-specialty__btn data-specialty-id="3").vacancies-card__descr.link--hover  
                  span.link-face.link-face--front Опис ваканції
                  span.link-face.link-face--back Опис ваканції
              button.general-btn(type="button" data-call-us-btn data-specialty-id="3") 
                span Долучитися

      li.vacancies-card 
        .text-frame--border
          .text-frame
            p.vacancies-card__number 04
            .vacancies-card__text-wrap
              .vacancies-card__text 
                h3 Діловод підрозділу
                button(type="button" data-specialty__btn data-specialty-id="4").vacancies-card__descr.link--hover  
                  span.link-face.link-face--front Опис ваканції
                  span.link-face.link-face--back Опис ваканції
              button.general-btn(type="button" data-call-us-btn data-specialty-id="4") 
